# AI Speech Evaluator - Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (optional for development)
DATABASE_URL=

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Ollama Configuration (required for AI functionality)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3:latest
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
OLLAMA_TIMEOUT=120000

# Vector Database Configuration
VECTOR_DB_TYPE=memory
# If using Pinecone (production)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=ai-speech-evaluator

# Whisper Configuration (optional - for local transcription)
WHISPER_MODEL_PATH=./models/whisper
WHISPER_MODEL=base
WHISPER_LANGUAGE=auto

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50

# Audio Configuration
MAX_AUDIO_DURATION=600
AUDIO_SAMPLE_RATE=16000

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined